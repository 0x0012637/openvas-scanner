CWARN0 = @CWALL@
CWARN1 = $(CWARN0) -Wwrite-strings -Wshadow
CWARN2 = $(CWARN1) -Wcast-align -Wcast-qual -Waggregate-return
CWARN3 = $(CWARN2) -Wstrict-prototypes -Wmissing-prototypes -Wmissing-declarations
CWARN4 = $(CWARN3) -Wconversion -Winline -Wtraditional
CWARN  = $(CWARN0)

# openvas.tmpl
#
# This file contains all the defines you may want to modify
#

AR=@AR@  
SHELL = /bin/sh
CONFIGURE_ARGS = @ac_configure_args@
MANROFF = nroff -man
@SET_MAKE@
rootdir=@PWDD@

# Autoconf installation directories
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libexecdir=@libexecdir@
datarootdir=@datarootdir@
datadir=@datadir@
sysconfdir=@sysconfdir@
sharedstatedir=@sharedstatedir@
localstatedir=@localstatedir@
libdir=@libdir@
includedir=@includedir@
oldincludedir=@oldincludedir@
infodir=@infodir@
mandir=@mandir@

srcdir=${rootdir}/src
libsdir=${rootdir}/libs
top_builddir = @PWDD@
include= -I. -I$(rootdir)/include  
INSTALL=@INSTALL@
INSTALL_DIR=@INSTALL_DIR@
installuser=@installuser@

# OpenVAS specific
OPENVASD_CONFDIR=@OPENVASD_CONFDIR@
OPENVASD_STATEDIR=@OPENVASD_STATEDIR@
OPENVASD_PIDDIR=@OPENVASD_PIDDIR@
OPENVASD_SHAREDSTATEDIR=@OPENVASD_SHAREDSTATEDIR@
OPENVASD_DATADIR=@OPENVASD_DATADIR@
OPENVASD_LIBDIR=@OPENVASD_LIBDIR@
OPENVASD_LOGDIR=@OPENVASD_LOGDIR@


OPENVASD_PLUGINS=@OPENVASD_PLUGINS@
OPENVASD_REPORTS=@OPENVASD_REPORTS@

OPENVAS_DIRECTORIES="-DOPENVASD_CONFDIR=\"$(OPENVASD_CONFDIR)\"" "-DOPENVASD_STATEDIR=\"$(OPENVASD_STATEDIR)\"" "-DOPENVASD_DATADIR=\"$(OPENVASD_DATADIR)\"" "-DOPENVASD_LIBDIR=\"${OPENVASD_LIBDIR}\"" "-DOPENVASD_PLUGINS=\"${OPENVASD_PLUGINS}\"" "-DOPENVASD_REPORTS=\"${OPENVASD_REPORTS}\"" -DOPENVASD_SHAREDSTATEDIR=\"${OPENVASD_SHAREDSTATEDIR}\" -DOPENVASD_LOGDIR=\"${OPENVASD_LOGDIR}\" -DOPENVASD_PIDDIR=\"${OPENVASD_PIDDIR}\"

#
# The server / client modes do not make a lot of sense
# as of today, as the software makes the checks (you need
# to be root to start openvasd)
#

# 
#
# Server mode : (rwxrwx---)
#
SERVERMODE=0755

# Plugins mode  (rw-r--r--)

PLUGINSMODE=644

# Plugins directory mode (rwxr-xr-x)

PLUGINSDIRMODE=755

# Reports directory mode (rwxrwx---)

REPORTSDIRMODE=775

# X11 location
X_LIBS=@X_LIBS@
X_CFLAGS=@X_CFLAGS@

# library path location
RUN_LIBS=@RUN_LIBS@

# Do we have to use the pthreads ?

USE_PTHREADS=@use_pthreads@

# Should we log the error using syslog() ?

# Build with debugging ?

DEBUG = @debug_flags@

USE_LIBWRAP = @uselibwrap@

# Some defines you may want to modify
OPENVAS_DEFS=@DEFS@ $(USE_PTHREADS) $(DEBUG) $(USE_LIBWRAP)
DEFS=  
LDFLAGS=@LDFLAGS@

# Your C compiler
CC=@CC@
LIBOPENVASCONFIG=@LIBOPENVASCONFIG@
OPENVASLIBNASLCONFIG=@OPENVASLIBNASLCONFIG@
# libraries
GLIB_CFLAGS=@GLIB_CFLAGS@
GLIB_LIBS=@GLIB_LIBS@
DL_LIB=@dl_lib@
RESOLV_LIB=@resolv_lib@
SOCKET_LIB=@socket_lib@
NSL_LIB=@nsl_lib@
RPCSVC_LIB=@rpcsvc_lib@
COMPAT_LIB=@compat_lib@
PTHREAD_LIB=@pthread_lib@
C_R_LIB=@c_r_lib@
LIBWRAP=@libwrap@
LIBS=@LIBS@

# documentation
MAN_OPENVASD_8=@man_openvasd_8@

# C compiler options
OVSCFLAGS=@OVSCFLAGS@
NASLCFLAGS=@NASLCFLAGS@
OPENVAS_CFLAGS=$(CWARN) $(include) $(OVSCFLAGS) $(NASLCFLAGS) $(OPENVAS_DIRECTORIES) $(CFLAGS)
CFLAGS=@CFLAGS@ 

LIBS=@LIBS@
