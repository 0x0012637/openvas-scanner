CWARN0 = @CWALL@
CWARN1 = $(CWARN0) -Wwrite-strings -Wshadow
CWARN2 = $(CWARN1) -Wcast-align -Wcast-qual -Waggregate-return
CWARN3 = $(CWARN2) -Wstrict-prototypes -Wmissing-prototypes -Wmissing-declarations
CWARN4 = $(CWARN3) -Wconversion -Winline -Wtraditional
CWARN  = $(CWARN0)

# openvas.tmpl
#
# This file contains all the defines you may want to modify
#

AR=@AR@  
SHELL = /bin/sh
CONFIGURE_ARGS = @ac_configure_args@
MANROFF = nroff -man
@SET_MAKE@
rootdir=@PWDD@

# Autoconf installation directories
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libexecdir=@libexecdir@
datarootdir=@datarootdir@
datadir=@datadir@
sysconfdir=@sysconfdir@
sharedstatedir=@sharedstatedir@
localstatedir=@localstatedir@
libdir=@libdir@
includedir=@includedir@
oldincludedir=@oldincludedir@
infodir=@infodir@
mandir=@mandir@

srcdir=${rootdir}/src
libsdir=${rootdir}/libs
top_builddir = @PWDD@
include= -I. -I$(rootdir)/include  
INSTALL=@INSTALL@
INSTALL_DIR=@INSTALL_DIR@
installuser=@installuser@

# OpenVAS specific
OPENVASSD_CONFDIR=@OPENVASSD_CONFDIR@
OPENVASSD_STATEDIR=@OPENVASSD_STATEDIR@
OPENVASSD_PIDDIR=@OPENVASSD_PIDDIR@
OPENVASSD_SHAREDSTATEDIR=@OPENVASSD_SHAREDSTATEDIR@
OPENVASSD_DATADIR=@OPENVASSD_DATADIR@
OPENVASSD_LIBDIR=@OPENVASSD_LIBDIR@
OPENVASSD_LOGDIR=@OPENVASSD_LOGDIR@


OPENVASSD_PLUGINS=@OPENVASSD_PLUGINS@
OPENVASSD_CACHE=@OPENVASSD_CACHE@
OPENVASSD_REPORTS=@OPENVASSD_REPORTS@

OPENVAS_DIRECTORIES="-DOPENVASSD_CONFDIR=\"$(OPENVASSD_CONFDIR)\"" "-DOPENVASSD_STATEDIR=\"$(OPENVASSD_STATEDIR)\"" "-DOPENVASSD_DATADIR=\"$(OPENVASSD_DATADIR)\"" "-DOPENVASSD_LIBDIR=\"${OPENVASSD_LIBDIR}\"" "-DOPENVASSD_PLUGINS=\"${OPENVASSD_PLUGINS}\"" "-DOPENVASSD_CACHE=\"${OPENVASSD_CACHE}\"" "-DOPENVASSD_REPORTS=\"${OPENVASSD_REPORTS}\"" -DOPENVASSD_SHAREDSTATEDIR=\"${OPENVASSD_SHAREDSTATEDIR}\" -DOPENVASSD_LOGDIR=\"${OPENVASSD_LOGDIR}\" -DOPENVASSD_PIDDIR=\"${OPENVASSD_PIDDIR}\"

#
# The scanner / client modes do not make a lot of sense
# as of today, as the software makes the checks (you need
# to be root to start openvassd)
#

# 
#
# Server mode : (rwxrwx---)
#
SERVERMODE=0755

# Plugins mode  (rw-r--r--)

PLUGINSMODE=644

# Plugins directory mode (rwxr-xr-x)

PLUGINSDIRMODE=755

# Reports directory mode (rwxrwx---)

REPORTSDIRMODE=775

# X11 location
X_LIBS=@X_LIBS@
X_CFLAGS=@X_CFLAGS@

# library path location
RUN_LIBS=@RUN_LIBS@

# Should we log the error using syslog() ?

# Build with debugging ?

DEBUG = @debug_flags@

USE_LIBWRAP = @uselibwrap@

# Some defines you may want to modify
OPENVAS_DEFS=@DEFS@ $(DEBUG) $(USE_LIBWRAP)
DEFS=  
LDFLAGS=@LDFLAGS@

# Your C compiler
CC=@CC@
LIBOPENVASCONFIG=@LIBOPENVASCONFIG@
# libraries
GLIB_CFLAGS=@GLIB_CFLAGS@
GLIB_LIBS=@GLIB_LIBS@
DL_LIB=@dl_lib@
RESOLV_LIB=@resolv_lib@
SOCKET_LIB=@socket_lib@
NSL_LIB=@nsl_lib@
RPCSVC_LIB=@rpcsvc_lib@
COMPAT_LIB=@compat_lib@
C_R_LIB=@c_r_lib@
LIBWRAP=@libwrap@
LIBS=@LIBS@

LIBTOOL=$(SHELL) ${rootdir}/libtool

# documentation
MAN_OPENVASSD_8=@man_openvassd_8@

# C compiler options
OVSCFLAGS=@OVSCFLAGS@
OPENVAS_CFLAGS=$(CWARN) $(include) $(OVSCFLAGS) $(OPENVAS_DIRECTORIES) $(CFLAGS)
CFLAGS=@CFLAGS@ 

LIBS=@LIBS@
